        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/itemGameRecordHomeTeamScore1"
        app:layout_constraintBottom_toBottomOf="@id/itemGameRecordHomeTeamScore3"
        app:layout_constraintStart_toEndOf="@id/itemGameRecordDivisor2"
        tools:text="25" />

    <TextView
        android:id="@+id/itemGameRecordHomeTeamScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/itemGameRecordHomeTeamScore2"
        app:layout_constraintBottom_toBottomOf="@id/itemGameRecordHomeTeamScore4"
        app:layout_constraintEnd_toStartOf="@id/itemGameRecordDivisor3"
        tools:text="23" />

    <TextView
        android:id="@+id/itemGameRecordDivisor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        app:layout_constraintTop_toTopOf="@id/itemGameRecordDivisor2"
        app:layout_constraintBottom_toBottomOf="@id/itemGameRecordHomeTeamScore4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/itemGameRecordAwayTeamScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/itemGameRecordHomeTeamScore2"
        app:layout_constraintBottom_toBottomOf="@id/itemGameRecordHomeTeamScore4"
        app:layout_constraintStart_toEndOf="@id/itemGameRecordDivisor3"
        tools:text="25" />

    <TextView
        android:id="@+id/itemGameRecordHomeTeamScore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/itemGameRecordHomeTeamScore3"
        app:layout_constraintBottom_toBottomOf="@id/itemGameRecordHomeTeamScore5"
